
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Giriş Yap| Narail</title>
    <!-- Favicon-->
    <link rel="icon" href="../../favicon.ico" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="~/Content/Admin/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- Waves Effect Css -->
    <link href="~/Content/Admin/plugins/node-waves/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="~/Content/Admin/plugins/animate-css/animate.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="~/Content/Admin/css/style.css" rel="stylesheet">
</head>
<body style="background:#808080" class="login-page">
    <div class="login-box">
        
        <div class="logo">
            @*<a href="javascript:void(0);">Admin<b>BSB</b></a>
        <small>Admin BootStrap Based - Material Design</small>*@

            
            <br /><br />
        </div>
        <div class="card">

            <div class="body">
                @*<div class="msg">Sign in to start your session</div>*@
                <div>  <img src="~/Content/Site/images/logo/KarapinarMedya-1.png" alt="Karapınar Medya" style="margin-left:25px"></div>
              
                <form class="color-form" action="/Login/Index" method="post">

                    <br /><br />
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons col-black">person</i>
                        </span>
                        <div class="form-line">
                            <input type="text" class="form-control" name="email" placeholder="E-mail" required autofocus>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons col-black">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control" name="password" placeholder="Şifre" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8 p-t-5">
                            <input type="checkbox" name="rememberme" id="rememberme" class="filled-in chk-col-pink">
                        </div>
                        <div  class="col-xs-12">
                            <button class="btn btn-block bg-black waves-effect" type="submit">Giriş Yap</button>
                        </div>
                    </div>
                    <div class="row m-t-15 m-b--20">

                       
                    </div>
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert-message">
                            <span class="btn btn-danger btn-block waves-effect waves-light"><strong>işlem Hatalı!</strong> @ViewBag.Error </span>
                        </div>
                    }
                </form>

            </div>
        </div>
    </div>
    <!-- Jquery Core Js -->
    <script src="~/Content/Admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="~/Content/Admin/plugins/bootstrap/js/bootstrap.js"></script>
    <!-- Waves Effect Plugin Js -->
    <script src="~/Content/Admin/plugins/node-waves/waves.js"></script>
    <!-- Validation Plugin Js -->
    <script src="~/Content/Admin/plugins/jquery-validation/jquery.validate.js"></script>
    <!-- Custom Js -->
    <script src="~/Content/Admin/js/admin.js"></script>
    <script src="~/Content/Admin/js/pages/examples/sign-in.js"></script>
</body>
</html>