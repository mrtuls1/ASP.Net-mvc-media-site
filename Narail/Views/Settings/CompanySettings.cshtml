@model Narail.Models.Settings
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Şirket Ayarları
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        </a>

                    </li>
                </ul>
            </div>
            <div class="body">
                @using (Html.BeginForm("CompanySettings", "Settings", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <label for="email_address">Şirket Logosu</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="file" id="File" name="File" accept=".jpg,.JPG,.PNG,.png,.jpeg,.JPEG" class="form-control" />
                        </div>
                    </div>


                    <label for="password">Şirket Adı</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control", @maxlength = "150",} })
                        </div>
                    </div>
                     <label for="password">Şirket Sloganı</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.CompanySlogan, new { htmlAttributes = new { @class = "form-control", @maxlength = "150",  } })
                        </div>
                    </div>

                      <label for="password">Founder 1</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.FounderName1, new { htmlAttributes = new { @class = "form-control", @maxlength = "150", } })
                        </div>
                    </div>

                     <label for="email_address">Founder Resmi 1</label>
                     <div class="form-group">
                         <div class="form-line">
                             <input type="file" id="File" name="File2" accept=".jpg,.JPG,.PNG,.png,.jpeg,.JPEG" class="form-control" />
                         </div>
                     </div>

                    <label for="password">Founder 2</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.FounderName2, new { htmlAttributes = new { @class = "form-control", @maxlength = "150",  } })
                        </div>
                    </div>

                     <label for="email_address">Founder Resmi 2</label>
                     <div class="form-group">
                         <div class="form-line">
                             <input type="file" id="File" name="File3" accept=".jpg,.JPG,.PNG,.png,.jpeg,.JPEG" class="form-control" />
                         </div>
                     </div>
                    <br>
                    <div align="center">
                        <input type="submit" class="btn btn-success m-t-15 waves-effect" value="Değişiklikleri Kaydet">

                    </div>
                }
            </div>
        </div>
    </div>
</div>


