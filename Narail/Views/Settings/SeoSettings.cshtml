@model Narail.Models.Settings
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    SEO Ayarları
                </h2>
                <h6 style="color:red">
                    ! Bu alana meta tagı girilmektedir. Seo alanında uzman kişiler bu alanı yönetebilir.Yanlış kod girişi sitenin çalışmasında ve arama motorlarında görünmesinde sorun yaratabilir.
                </h6>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        </a>

                    </li>
                </ul>
            </div>
            <div class="body">
                @using (Html.BeginForm("SeoSettings", "Settings", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <label for="password">Seo Alanı</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextAreaFor(model => model.Seo, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", } })
                        </div>
                    </div>
                    <br>
                    <div align="center">
                        <input type="submit" class="btn btn-success m-t-15 waves-effect" value="Değişiklikleri Kaydet">

                    </div>
                }
            </div>
        </div>
    </div>
</div>

